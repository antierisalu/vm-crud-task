# General settings
NODE_ENV=development

# Gateway service
GATEWAY_MSG="Hello Africa!"
GATEWAY_PORT=3000
GATEWAY_INVENTORY_URL=http://localhost:4000
GATEWAY_BILLING_URL=http://localhost:5000
GATEWAY_DIR=/vagrant/api-gateway

# Inventory service
INVENTORY_PORT=4000
INVENTORY_DB_NAME=movies
INVENTORY_DB_USER=username
INVENTORY_DB_PASSWORD=password
INVENTORY_DB_HOST=localhost
INVENTORY_DB_PORT=5432
INVENTORY_DIR=/vagrant/inventory

# Billing service
BILLING_PORT=5000
BILLING_DB_NAME=billing
BILLING_DB_USER=username
BILLING_DB_PASSWORD=password
BILLING_DB_HOST=localhost
BILLING_DB_PORT=5432
BILLING_DIR=/vagrant/billing

# RabbitMQ settings (if used for inter-service communication)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASS=guest

# API keys or secrets (replace with actual secure values in production)
JWT_SECRET=your_jwt_secret_key_here
API_KEY=your_api_key_here

# Logging
LOG_LEVEL=debug